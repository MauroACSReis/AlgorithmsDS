/*
Exercise 1

function hundredTotal (a,b) {
if (a === 100 || b === 100) {
return true
} else if (a + b === 100) {
return true
} else {
return false
}
}
*/

/*
Exercise 1

const isEqualTo100 = (a,b) => a === 100 || b === 100 || (a + b === 100);
*/

/*
Exercise 2

const whatFormat = (str) => str.slice(lastIndexOf('.'));

console.log(whatFormat('index.html'));
console.log(whatFormat('webpack.config.js'));
*/

/*
Exercise 3

const moveCharsForward = (str) =>
.split('')
